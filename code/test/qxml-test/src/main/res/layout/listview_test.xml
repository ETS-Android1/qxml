<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_view"
        android:entries="@array/sports.test"
        android:divider="@drawable/shape_gradient"
        android:dividerHeight="10dp"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:listSelector="@drawable/selector_bg"
        android:drawSelectorOnTop="false"
        android:stackFromBottom="false"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    </ListView>

    <GridView
        android:id="@+id/grid_view"
        android:layout_marginTop="100dp"
        android:divider="@drawable/shape_gradient"
        android:dividerHeight="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:columnWidth="20dp"
        android:numColumns="3"
        android:cacheColorHint="#505050"
        android:transcriptMode="alwaysScroll"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:listSelector="@drawable/selector_bg"
        android:drawSelectorOnTop="true"
        android:stackFromBottom="false"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>


    <ExpandableListView
        android:id="@+id/expandable_list_view"
        android:groupIndicator="@drawable/selector_bg"
        android:indicatorLeft="100dp"
        android:indicatorRight="130dp"
        android:childIndicator="@drawable/shape_gradient"
        android:childIndicatorLeft="0dp"
        android:childIndicatorRight="40dp"
        android:childIndicatorStart="0dp"
        android:childIndicatorEnd="40dp"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>


</FrameLayout>

